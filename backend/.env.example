# Allgemeine Einstellungen
PROJECT_NAME="SMG Dialog Web Bot"
DATA_DIR="/app/data"

# Secrets
SECRET_KEY="change-this-to-a-secure-random-string-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Datenbank
DATABASE_URL="postgresql://postgres:postgres@postgres/smg_dialog"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="smg_dialog"

# Weaviate
WEAVIATE_URL="http://weaviate:8080"
WEAVIATE_API_KEY=""

# LLM
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo"

# Optional: Mistral
MISTRAL_API_KEY=""
MISTRAL_MODEL="mistral-medium"

# CORS-Konfiguration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://frontend:3000"]

# Automatischer Superuser beim ersten Start
# Setzen Sie AUTO_CREATE_SUPERUSER=true und ein sicheres Passwort, um beim ersten Start einen Admin-Benutzer zu erstellen
AUTO_CREATE_SUPERUSER=false
FIRST_SUPERUSER_USERNAME="admin"
FIRST_SUPERUSER_EMAIL="admin@example.com"
FIRST_SUPERUSER_PASSWORD=""  # Dringend empfohlen: Ã„ndern Sie dieses Passwort!
FIRST_SUPERUSER_FIRSTNAME="Admin"
FIRST_SUPERUSER_LASTNAME="User"